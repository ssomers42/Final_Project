    <title>When2Buy</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/homeListsButton.css" rel="stylesheet">
    <link href="/css/login.css" rel="stylesheet">


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
    body 
    {
      background-image: url("/images/backgroundBlack.jpg");
      background-color: #cccccc;
    }

    .jumbotron{
      background-image: url("/images/backgroundBlack.jpg");
      background-color: #cccccc;
    }
    </style>
  </head>
  <body>

  	<div class="jumbotron" id="welcomeTile">
  		<!-- login, edit, and ? buttons -->

      <a href='/help'>
        <button type="button" class="btn btn-secondary" style="float: right;">
        ?
        </button>
      </a>
      <a href="/" >
        <button type="button" class="btn btn-secondary" style="float:  left;">
      	 Logout
        </button>
      </a>
      <h1 style="text-align: center; color: white; clear: left;">When2Buy</h1>
      <h1 style="text-align: center; color: white; clear: left;">Hello, Welcome!</h1>
      <br>
      <p style="text-align: center;">
        <img src="http://lorempixel.com/200/200/people" id=loginImage>
      </p>
    </div>
    <!--home page lists -->
    <!--div class="listButton" style="text-align: center;">
        <a href="/list/New List" class="listButton btn btn-danger"> +Create New </a>
        <a href="/list/Grocery List" class="listButton btn btn-danger"> Grocery List <br> Due: 2/10/2018 </a>
    </div-->
    <div class="listButton" style="text-align: center;">
        <a href=# List" class="listButton btn btn-danger" data-toggle="modal" data-target="#createList"> +Create New </a>
        {{#each names}}
        <a href="/list/{{listName}}" class="listButton btn btn-danger"> {{listName}} <br> Due: {{dueDate}} </a>
        {{/each}}
    </div>
    <div id = "createList" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content"> 
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"> &times; </button>
            <h4 class="modal-title"> Create New List </h4>
          </div>
          <div class="modal-body">
            <form id="newList" role="form" method="get" action="/list">
              <div class="form-group">
                <label for="listInput"> List Name </label>
                <input type="text" class="form-control" name="listInput" required>
              </div>
              <div class="form-group">
                <label for="dueDate"> Due Date </label>
                <input type="date" name="due" id="dueDate" required>
              </div>   
              <input type="submit">
            </form>
          </div>
          </div>
        </div>
      </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>