<!DOCTYPE html>
<html>
  <head>

    <title>List</title>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" >
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet" >
    <link href="/css/list.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
		<!-- Header Part -->
    <div class="jumbotron" id="listTile">
      <button type="button" class="btn btn-secondary" style="float: left;">
        <a href="/" style="color: black"> Back</a>
      </button>

      <!-- List Name shown in the middle-->
      <span id="listName">{{listName}}</span>

      <button type="button" class="btn btn-secondary" style="float: right;">
        Edit
      </button>

      <button type="button" class="btn btn-secondary" style="float: right;">
        ?
      </button>
    </div>

    <!-- function Part -->
    <ul class="nav">
      <button type="button" class="btn btn-danger btn-lg" style="float: left;" onclick="showNewItemForm()">
        New Item
      </button>
      <button type="button" class="btn btn-danger btn-lg">
        Share
      </button>
      <button type="button" class="btn btn-danger btn-lg" style="float: right;">
        Notes
      </button>
    </ul>

    <!-- list part -->
    <div id="newItemDisplay" style="display: none">
      <form id="newItemForm" action="">
        Item Name:<br>
        <input type="text" name="firstname" value="">
        <br>
        <br>
        <input type="submit" value="Submit" >
      </form> 
    </div>

    <hr id="contentHeader">
    <div id="realContent" style="display: none">
      <h4>egg</h4>
    </div>
    </hr>

    <!-- Footer part -->
    <footer>
      <button type="button" class="btn btn-secondary">
        Suggested Items
      </button>
    </footer>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script type="text/javascript">
      function showNewItemForm() {
        $('#newItemDisplay').show();
      }


      $( document ).ready(function() {
        // alert("page is ready");
        $("#newItemForm").submit(function(e) {
          e.preventDefault();
          alert("we got your form");
          $("#newItemDisplay").hide()
          $("#realContent").show()
        });
      });


    </script>
    
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
